@model GamesPlatform.DTOs.GameDTO

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <h1 class="display-5">@Model.Title</h1>

    <div class="row mt-3">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow-sm" />
        </div>

        <div class="col-md-8">
            <p><strong>Tag:</strong> @Model.Tag</p>
            <p><strong>Developer:</strong> @Model.Developer</p>
            <p><strong>Publisher:</strong> @Model.Publisher</p>
            <p><strong>Release year:</strong> @Model.ReleaseYear.ToString("yyyy")</p>

            <p><strong>Description:</strong></p>
            <p>@Model.Description</p>

            <h4 class="mt-4">Average Ratings</h4>
            <ul class="list-group">
                <li class="list-group-item">Gameplay: @Model.AvgGameplayRating / 10</li>
                <li class="list-group-item">Graphics: @Model.AvgGraphicsRating / 10</li>
                <li class="list-group-item">Optimization: @Model.AvgOptimizationRating / 10</li>
                <li class="list-group-item">Story: @Model.AvgStoryRating / 10</li>
            </ul>

            <h4 class="mt-4">Available on Platforms</h4>
            <ul>
                @foreach (var platform in Model.Platforms)
                {
                    <li>@platform.PlatformName</li>
                }
            </ul>

            <div class="mt-3">
                <a class="btn btn-primary" asp-controller="Reviews" asp-action="Create" asp-route-gameId="@Model.GameId">Add Review</a>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-controller="Users" asp-action="AddToLibrary" method="post" class="d-inline-block ms-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="gameId" value="@Model.GameId" />
                        <select name="status" class="form-select d-inline-block" style="width:auto; display:inline-block; vertical-align:middle;">
                            <option value="InProgress" selected>In progress</option>
                            <option value="Completed">Completed</option>
                            <option value="Dropped">Dropped</option>
                        </select>
                        <button type="submit" class="btn btn-success ms-1">Dodaj do biblioteki</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-secondary ms-2" asp-area="Identity" asp-page="/Account/Login">Zaloguj się, aby dodać</a>
                }
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <h3>User Reviews</h3>
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews)
        {
            <div class="card my-3 shadow-sm">
                <div class="card-body">
                    <p class="card-text">@review.Description</p>
                    <small class="text-muted">By: @(review.User?.UserName ?? review.UserId)</small>
                </div>
            </div>
        }
    }
    else
    {
        <p>No reviews yet.</p>
    }
</div>
