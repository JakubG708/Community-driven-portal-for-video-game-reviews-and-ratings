@model IEnumerable<GamesPlatform.Models.Game>

@{
    ViewData["Title"] = "All Games";
    var currentQuery = ViewBag.SearchQuery as string ?? "";
    var currentBy = (ViewBag.FilterBy as string ?? "title").ToLowerInvariant();
}

<h1>All Games</h1>

<div class="mb-3">
    <p>Lista dostępnych gier. Kliknij tytuł, aby zobaczyć szczegóły.</p>
</div>

<div class="row mb-3">
    <div class="col-md-8">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="search" name="q" value="@currentQuery" class="form-control me-2" placeholder="Szukaj..." />
            <select name="by" class="form-select me-2" style="width:220px;">
                <option value="title" selected="@(currentBy == "title")">Tytuł</option>
                <option value="developer" selected="@(currentBy == "developer")">Developer</option>
                <option value="publisher" selected="@(currentBy == "publisher")">Publisher</option>
            </select>
            <button type="submit" class="btn btn-primary">Szukaj</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Wyczyść</a>
        </form>
    </div>
    <div class="col-md-4 text-end">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Add" class="btn btn-success">Dodaj nową grę</a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No games found in the database.
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Tag</th>
                <th>Release Year</th>
                <th>Developer</th>
                <th>Publisher</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>
                    <a asp-action="Game" asp-route-id="@game.GameId" class="text-decoration-none fw-bold">
                        @game.Title
                    </a>
                </td>
                <td>@game.Tag</td>
                <td>@game.ReleaseYear.ToString("yyyy")</td>
                <td>@game.Developer</td>
                <td>@game.Publisher</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Game" asp-route-id="@game.GameId">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-sm btn-outline-secondary ms-2" asp-action="Edit" asp-route-id="@game.GameId">Edit</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
