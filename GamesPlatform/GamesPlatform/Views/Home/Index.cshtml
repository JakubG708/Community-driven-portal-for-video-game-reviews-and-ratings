@{
    ViewData["Title"] = "Home";
}

<div class="py-5 text-center">
    <h1 class="display-4">Welcome to GamesPlatform</h1>
    <p class="lead">A community for game reviews and ratings — browse, rate and share your impressions.</p>
    <p>
        <a asp-controller="Games" asp-action="Index" class="btn btn-primary btn-lg me-2">Browse Games</a>
        <a asp-controller="Reviews" asp-action="Index" class="btn btn-outline-primary btn-lg">View Reviews</a>
    </p>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Add Reviews</h5>
                <p class="card-text">Log in, add a game to your library and write your opinion — help others choose the best titles.</p>
                <a asp-controller="Reviews" asp-action="Create" class="btn btn-sm btn-outline-primary">Add a review</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Ratings & Rankings</h5>
                <p class="card-text">Rate games and check rankings to see community favorites.</p>
                <a asp-controller="Rankings" asp-action="Index" class="btn btn-sm btn-outline-primary">View rankings</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Community</h5>
                <p class="card-text">Browse users, visit profiles, read reviews and join discussions.</p>
                <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-primary">Users</a>
            </div>
        </div>
    </div>
</div>
