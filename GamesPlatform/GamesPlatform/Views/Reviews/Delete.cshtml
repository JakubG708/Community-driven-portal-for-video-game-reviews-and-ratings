@model GamesPlatform.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<h4>Are you sure you want to delete this review?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.ReviewId</dd>

        <dt class="col-sm-2">Game</dt>
        <dd class="col-sm-10">@(Model.Game?.Title ?? $"GameId: {Model.GameId}")</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@(Model.User?.UserName ?? Model.UserId)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.ReviewId" method="post">
    <input type="hidden" name="id" value="@Model.ReviewId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-link" asp-action="Index">Back to List</a>
    @Html.AntiForgeryToken()
</form>
