@model GamesPlatform.Models.Review

@{
    ViewData["Title"] = "Review Details";
}

<h1>Review Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.ReviewId</dd>

        <dt class="col-sm-2">Game</dt>
        <dd class="col-sm-10">@(Model.Game?.Title ?? $"GameId: {Model.GameId}")</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@(Model.User?.UserName ?? Model.UserId)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<p>
    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.ReviewId">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ReviewId">Delete</a>
    <a class="btn btn-link" asp-action="Index">Back to List</a>
</p>
