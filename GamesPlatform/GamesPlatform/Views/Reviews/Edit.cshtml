@model GamesPlatform.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<h1>Edit Review</h1>

<form asp-action="Edit" asp-route-id="@Model.ReviewId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" name="id" value="@Model.ReviewId" />

    <div class="mb-3">
        <label class="form-label">Game</label>
        <input class="form-control" value="@(Model.Game?.Title ?? $"GameId: {Model.GameId}")" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">User</label>
        <input class="form-control" value="@(Model.User?.UserName ?? Model.UserId)" readonly />
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="6" required>@Model.Description</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-link" asp-action="Index">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
